 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <!-- links -->
  <link href="https://api.fontshare.com/v2/css?f[]=general-sans@700&f[]=bespoke-serif@801&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/main.css">
 </head>
 <body>
    <section class="form-section">
        <div class="form-container">
          <h2 class="form-title">Add a New Book</h2>
          <form action="/add" method="post" class="form">
            <!-- Book Title -->
            <div class="form-group">
              <label for="title">Book Title</label>
              <input type="text" id="title" name="title" placeholder="Enter the book title" required>
            </div>
      
            <!-- Notes Content -->
            <div class="form-group">
              <label for="desc">Notes</label>
              <textarea id="desc" name="desc" placeholder="Write your notes here..." maxlength="500" required></textarea>
            </div>
      
            <!-- Additional Information Row -->
            <div class="form-row">
              <!-- ISBN -->
              <div class="form-group">
                <label for="isbn">ISBN</label>
                <input type="text" id="isbn" name="isbn" placeholder="Enter the ISBN" required>
              </div>
              <!-- Rating -->
              <div class="form-group">
                <label for="rate">Rating</label>
                <input type="number" id="rate" name="rate" placeholder="Rating (1-5)" min="1" max="5" required>
              </div>
            </div>
      
            <!-- Submit Button -->
            <button type="submit" class="primary-button">Add Book</button>
          </form>
        </div>
      </section>
      
 </body>
 </html>